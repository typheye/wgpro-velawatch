<script>
import router from "@system.router";
export default {
	data: {
		itc_p1v1: "rgba(0,0,0,0)",
		itc_p1v2: "rgba(0,0,0,0)",
		itc_p2v1: "rgba(0,0,0,0)",
		itc_p2v2: "rgba(0,0,0,0)",
		itc_p2v3: "rgba(0,0,0,0)",
		itc_p3v1: "rgba(0,0,0,0)",
		itc_p3v2: "rgba(0,0,0,0)",
		itc_p3v3: "rgba(0,0,0,0)",
	},
	onBackPress() {
		vibrator.vibrate({
			mode: "short",
		});
		this.toBack();
		return true;
	},
	tabBack() {
		vibrator.vibrate({
			mode: "short",
		});
		this.toBack();
	},
	ht(t, i) {
		if (t == 1)
			eval("this.itc_" + i + " = 'black'"),
				vibrator.vibrate({
					mode: "short",
				});
		else if (t == -1) eval("this.itc_" + i + " = '#3c3c3c'");
		else eval("this.itc_" + i + " = 'rgba(0,0,0,0)'");
	},
	toBack() {
		router.back();
	},
};
</script>
