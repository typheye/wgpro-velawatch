<script>
export default {
	private: {
		itc_p0v0: "#3c3c3c",
		itc_p1v1: "rgba(0,0,0,0)",
		itc_p1v2: "rgba(0,0,0,0)",
		itc_p2v1: "rgba(0,0,0,0)",
		itc_p2v2: "rgba(0,0,0,0)",
		itc_p2v3: "rgba(0,0,0,0)",
		itc_p3v1: "rgba(0,0,0,0)",
		itc_p3v2: "rgba(0,0,0,0)",
		itc_p3v3: "rgba(0,0,0,0)",
	},
	ht(t, i) {
		if (t == 1) eval("this.itc_" + i + " = 'black'");
		else if (t == -1) eval("this.itc_" + i + " = '#3c3c3c'");
		else eval("this.itc_" + i + " = 'rgba(0,0,0,0)'");
	},
	onBackPress() {
		this.$app.$def.toCancel(true);
		return true;
	},
	toBack() {
		this.$app.$def.goBack();
	},
	toRun(id) {
		if (id == "filemanger")
			this.$app.$def.toTips(
				this.$t("display.settings.run.filemanger.title"),
				this.$t("display.settings.run.filemanger.text")
			);
		else if (id == "browser")
			this.$app.$def.toTips(
				this.$t("display.settings.run.browser.title"),
				this.$t("display.settings.run.browser.text")
			);
		else if (id == "polinfo")
			this.$app.$def.toTipsWithQR(
				this.$t("display.settings.run.polinfo.title"),
				this.$t("display.settings.run.polinfo.text"),
				this.$t("display.settings.run.polinfo.uri")
			);
		else {
			var v_uri = "";
			if (id == "taccount") v_uri = "/pages/ui/acts/settings/taccount";
			else if (id == "tserver") v_uri = "/pages/ui/acts/settings/tserver";
			else if (id == "appinfo") v_uri = "/pages/ui/acts/settings/appinfo";
			else if (id == "textdisplay")
				v_uri = "pages/ui/acts/settings/textdisplay";
			this.$app.$def.goPage(v_uri);
		}
	},
};
</script>

