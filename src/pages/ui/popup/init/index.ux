<template>
	<div class="page" @swipe="right">
		<div class="tab">
			<text class="tab-back"></text>
			<marquee class="tab-text">{{ $t("app.name") }}</marquee>
			<text class="tab-more"></text>
		</div>
		<div class="exit">
			<text class="exit-tip-text">{{ $t("public.inittip") }}</text>
			<a class="exit-tip-text-a" onclick="toPoli()">
				{{ $t("public.initpoli") }}
			</a>
			<div class="exit-choose">
				<div
					class="exit-choose-value"
					style="background-color: {{ fc_v1 }}"
					ontouchstart="ht(1, 'v1')"
					ontouchend="ht(0, 'v1')"
					onclick="toExit()"
				>
					<img class="exit-choose-img" src="/common/mipmap/a29.png" />
				</div>
				<div
					class="exit-choose-value"
					style="background-color: {{ fc_v2 }}"
					ontouchstart="ht(1, 'v2')"
					ontouchend="ht(0, 'v2')"
					onclick="toLaunch()"
				>
					<img class="exit-choose-img" src="/common/mipmap/a28.png" />
				</div>
			</div>
		</div>
	</div>
</template>

<script>
export default {
	private: {
		fc_v1: "#3c3c3c",
		fc_v2: "#3c3c3c",
	},
	ht(t, i) {
		if (t) eval("this.fc_" + i + " = 'black'");
		else eval("this.fc_" + i + " = '#3c3c3c'");
	},
	onBackPress() {
		this.$app.$def.toCancel(false);
		return true;
	},
	toLaunch() {
		this.$app.$def.settingsInit();
		this.$app.$def.goReplacePage("/pages/ui/home");
	},
	toExit() {
		this.$app.$def.toExit();
	},
	toPoli() {
		this.$app.$def.toTipsWithQR(
			this.$t("display.settings.run.polinfo.title"),
			this.$t("display.settings.run.polinfo.text"),
			this.$t("display.settings.run.polinfo.uri")
		);
	},
};
</script>

<style>
@import "../../../../common/style/index.css";
</style>
