@import "../../../../../../../common/style/index.css";

.outer {
	width: 100%;
	height: 80%;
	background-color: #222;
}

.inner-container {
	height: 800px; /* 触发垂直滚动 */
}

.inner {
	width: 100%;
	height: 100%;
	flex-direction: row; /* 关键：启用横向布局 */
}

.image-container {
	width: 800px; /* 触发水平滚动 */
	height: 100%;
	justify-content: center;
	align-items: center;
}

.image {
	width: auto;
	height: auto;
}

.slider {
	width: 100%;
	height: 20%;
	padding-left: 80px;
	padding-right: 80px;
	selected-color: #32618d;
	block-color: white;
}
</style>
