<script>
export default {
	private: {
		itc_p0v0: "#3c3c3c",
		itc_p1v1: "rgba(0,0,0,0)",
		itc_p1v2: "rgba(0,0,0,0)",
		itc_p1v3: "rgba(0,0,0,0)",
		itc_p2v1: "rgba(0,0,0,0)",
		itc_p2v2: "rgba(0,0,0,0)",
		itc_p3v1: "rgba(0,0,0,0)",
		eggsdj: 0,
	},
	ht(t, i) {
		if (t == 1) eval("this.itc_" + i + " = 'black'");
		else if (t == -1) eval("this.itc_" + i + " = '#3c3c3c'");
		else eval("this.itc_" + i + " = 'rgba(0,0,0,0)'");
	},
	onBackPress() {
		this.$app.$def.toCancel(true);
		return true;
	},
	toBack() {
		this.$app.$def.goBack();
	},
	toRun(id) {
		if (id == "appabout")
			this.$app.$def.toTips(
				this.$t("acts.settings.appinfo.run.appabout.title"),
				this.$t("acts.settings.appinfo.run.appabout.text")
			);
		else if (id == "appactive")
			this.$app.$def.toTips(
				this.$t("acts.settings.appinfo.run.appactive.title"),
				this.$t("acts.settings.appinfo.run.appactive.text")
			);
		else if (id == "appbackup")
			this.$app.$def.toTips(
				this.$t("acts.settings.appinfo.run.appbackup.title"),
				this.$t("acts.settings.appinfo.run.appbackup.text")
			);
		else if (id == "joinqqun")
			this.$app.$def.toTipsWithQR(
				this.$t("acts.settings.appinfo.run.joinqqun.title"),
				this.$t("acts.settings.appinfo.run.joinqqun.text"),
				this.$t("acts.settings.appinfo.run.joinqqun.uri")
			);
		else {
			var v_uri = "";
			if (id == "appupdate") v_uri = "pages/ui/acts/settings/appupdate";
			if (id == "appreset") v_uri = "pages/ui/popup/reset";
			this.$app.$def.goPage(v_uri);
		}
	},
	clilogo() {
		this.eggsdj += 1;
		if (this.eggsdj == 2) {
			this.eggsdj = 0;
			var appinfos = this.$app.$def.getAppinfo();
			var demo = this.$t("acts.settings.appinfo.run.clilogo.text");
			demo = this.$app.$def.textFormat(demo, {
				name: appinfos.name,
				versionName: appinfos.versionName,
				versionCode: appinfos.versionCode,
			});
			this.$app.$def.toTips(
				this.$t("acts.settings.appinfo.run.clilogo.title"),
				demo
			);
		}
		return true;
	},
	lonlogo() {
		this.eggsdj = 0;
		this.$app.$def.shortVib(true);
		//Debug Page
		this.$app.$def.goPage("pages/ui/function/debugs");
		return true;
	},
};
</script>

